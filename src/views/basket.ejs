<div class="row">
  <div class="col-md-12">
    <h1>Your Basket</h1>
  </div>
</div>

<% if (items && items.length > 0) { %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach((item) => { %>
        <tr>
          <td><%= item.sku %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.quantity %></td>
          <td>
            <!-- Remove from Basket Form -->
            <form method="POST" action="/basket/remove">
              <input type="hidden" name="sku" value="<%= item.sku %>">
              <button type="submit" class="btn btn-danger">Remove from Basket</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5">
          <!-- Button Container -->
          <div class="d-flex justify-content-between">
            <!-- Buy Now Form -->
            <form method="POST" action="/basket/buy">
              <button type="submit" class="btn btn-success">Buy Now</button>
            </form>
            <!-- Clear Basket Form -->
            <form method="POST" action="/basket/clear">
              <button type="submit" class="btn btn-danger">Clear Basket</button>
            </form>
          </div>
        </td>
      </tr>
    </tfoot>
  </table>
<% } else { %>
  <p class="lead">Nothing in here.</p>
<% } %>
