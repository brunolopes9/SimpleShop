<div class="row">
  <div class="col-md-12">
    <h1><%= title %></h1>
  </div>
</div>

<!-- Tags Section -->
<div class="row my-3">
  <div class="col-md-12">
    <h5>Filter by Tags:</h5>
    <div class="d-flex flex-wrap gap-2">
      <!-- Add a "Clear Tags" link -->
      <a href="/shop" 
         class="badge btn-danger text-decoration-none p-2">Clear Tags</a>
      <% tags.forEach((tag) => { %>
        <!-- Highlight the current tag -->
        <a href="/shop/<%= tag %>" 
           class="badge text-decoration-none p-2 <%= currentTag === tag ? 'bg-secondary text-light' : 'bg-primary' %>">
          <%= tag %>
        </a>
      <% }); %>
    </div>
  </div>
</div>

<!-- Items Section -->
<% if (items && items.length) { %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach((item) => { %>
        <tr>
          <td><%= item.sku %></td>
          <td><%= item.name %></td>
          <td>â‚¬<%= item.price %></td>
          <td>
            <!-- Add to Basket Form -->
            <form method="POST" action="/basket/add">
              <input type="hidden" name="sku" value="<%= item.sku %>">
              <input type="hidden" name="quantity" value="1">
              <button type="submit" class="btn btn-success">Add to Basket</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p class="lead">Nothing to see here yet</p>
<% } %>

<!-- Pagination Section -->
<% if (totalPages > 1) { %>
  <nav aria-label="Page navigation" class="mt-3">
    <ul class="pagination justify-content-center">
      <% if (currentPage > 1) { %>
        <!-- Previous Page Link -->
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
        </li>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
      <% if (currentPage < totalPages) { %>
        <!-- Next Page Link -->
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
        </li>
      <% } %>
    </ul>
  </nav>
<% } %>
